# ===================
# Database
# ===================
DATABASE_URL="postgresql://postgres:password@localhost:5432/million_platform?schema=public"

# ===================
# JWT Configuration
# ===================
# Access token (short-lived, 15 minutes)
JWT_SECRET="change-this-to-a-random-64-character-string"

# Refresh token (long-lived, 7 days)
JWT_REFRESH_SECRET="change-this-to-another-random-64-character-string"

# ===================
# Server Configuration
# ===================
NODE_ENV="development"
PORT=4000

# ===================
# CORS
# ===================
CORS_ORIGIN="http://localhost:3000"

# ===================
# File Upload
# ===================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="./uploads"

# ===================
# Email Service (SMTP)
# ===================
# Gmail SMTP Settings
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Select "Mail" and your device
# 4. Copy the 16-character password below

SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-16-char-app-password"
SMTP_FROM_NAME="منصة المليون التعليمية"
SMTP_FROM_EMAIL="noreply@million-platform.com"

# Alternative: SendGrid (for production)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT=587
# SMTP_USER="apikey"
# SMTP_PASS="SG.your-sendgrid-api-key"

# Email Features
EMAIL_NOTIFICATIONS_ENABLED=true

# ===================
# Web Push (VAPID)
# ===================
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="your-public-key"
VAPID_PRIVATE_KEY="your-private-key"
VAPID_SUBJECT="mailto:admin@million-platform.com"

# ===================
# WhatsApp (Twilio)
# ===================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=+14155238886
