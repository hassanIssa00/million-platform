# ============================================
# Million Platform - Environment Variables Template
# ============================================
# Copy this to .env in the root and fill in the values.

# ------------ Database ------------
DATABASE_URL=postgresql://user:password@localhost:5432/million_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=million_db

# ------------ Redis ------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ------------ Authentication ------------
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=86400

# ------------ Server Configuration ------------
NODE_ENV=development
PORT=3000

# ------------ External Services ------------
# AI Features
OPENAI_API_KEY=sk_...

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_...
STRIPE_PUBLIC_KEY=pk_...
NEXT_PUBLIC_STRIPE_KEY=pk_...

# Supabase (Auth/Storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ------------ Frontend Configuration ------------
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ------------ Feature Flags ------------
ENABLE_MILLION_DIALOGUE=true
ENABLE_AI_QUESTIONS=false
